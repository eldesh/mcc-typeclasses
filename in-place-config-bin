cmd=$0
while test -h "$cmd"; do
  link=`ls -ld "$cmd" | sed -n 's/^.* -> //p'`
  case $link in
    "" ) break;;
    /* ) cmd=$link;;
    * )  cmd=`dirname "$cmd"`/$link;;
  esac
done

bindir=`dirname "$cmd"`
case $bindir in
  /* ) ;;
  * ) bindir=`(cd "$bindir"; pwd)`;;
esac
case $srcdir in
  /* ) ;;
  * ) srcdir=$bindir/../$srcdir;;
esac

: ${CURRY_PATH=$srcdir/lib}
