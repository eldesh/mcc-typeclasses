DECLARE_LABEL(extern, ___38_);
DECLARE_LABEL(static, ___38__1);
DECLARE_LABEL(static, ___38__2);

FUNCTION(___38_)
{
    Node *c1, *c2, *aux;
 ENTRY_LABEL(extern, ___38_)
    for ( c1 = regs.sp[0]; node_kind(c1) == INDIR_KIND; c1 = c1->n.node )
	;
    for ( c2 = regs.sp[1]; node_kind(c2) == INDIR_KIND; c2 = c2->n.node )
	;

    switch ( node_kind(c1) )
    {
    case LAZY_KIND:
	switch ( node_tag(c1) )
	{
	case NOUPD_TAG:
	    if ( node_kind(c2) == LAZY_KIND )
		switch ( node_tag(c2) )
		{
		case NOUPD_TAG:
		    regs.sp[0] = c1;
		    regs.sp[1] = c2;
		    CHECK_HEAP(queueMe_node_size);
		    aux	       = (Node *)regs.hp;
		    aux->info  = queueMe_info_table;
		    aux->q.spc = regs.ss;
		    aux->q.wq  = 0;
		    regs.hp   += queueMe_node_size;
		    CHECK_STACK(4);
		    regs.sp   -= 4;
		    regs.sp[0] = regs.sp[4];
		    regs.sp[1] = (Node *)update;
		    regs.sp[2] = aux;
		    regs.sp[3] = (Node *)___38_;
		    regs.sp[4] = aux;
		    start_thread(4);
		    GOTO(regs.sp[0]->info->eval);
		case UPD_TAG:
		    aux = c1;
		    c1	= c2;
		    c2	= aux;
		    break;
		}
	    /* FALL THROUGH!!! */
	case UPD_TAG:
	    switch ( node_kind(c2) )
	    {
	    case LAZY_KIND:
		if ( node_tag(c2) != QUEUEME_TAG )
		{
		    CHECK_STACK(2);
		    regs.sp   -= 2;
		    regs.sp[0] = c1;
		    regs.sp[1] = (Node *)___38_;
		    regs.sp[2] = c1;
		    regs.sp[3] = c2;
		    start_thread(2);
		    GOTO(regs.sp[0]->info->eval);
		}
		/* FALL THROUGH!!! */
	    case LVAR_KIND:
		CHECK_STACK1();
		regs.sp   -= 1;
		regs.sp[0] = c1;
		regs.sp[1] = (Node *)___38__1;
		regs.sp[2] = c2;
		GOTO(c1->info->eval);
	    }
	    assert(node_tag(c2) == CAPP_KIND);
	    *++regs.sp = c1;
	    GOTO(c1->info->eval);

	case QUEUEME_TAG:
	    switch ( node_kind(c2) )
	    {
	    case LAZY_KIND:
		if ( node_kind(c2) != QUEUEME_TAG )
		{
		    CHECK_STACK1();
		    regs.sp   -= 1;
		    regs.sp[0] = c2;
		    regs.sp[1] = (Node *)___38__1;
		    regs.sp[2] = c1;
		    GOTO(c2->info->eval);
		}
		/* FALL_THROUGH!!! */
	    case LVAR_KIND:
		CHECK_STACK1();
		regs.sp   -= 1;
		regs.sp[0] = c1;
		regs.sp[1] = (Node *)___38__1;
		regs.sp[2] = c2;
		GOTO(c1->info->eval);
	    }
	    assert(node_kind(c2) == CAPP_KIND);
	    *++regs.sp = c1;
	    GOTO(c1->info->eval);
	default:
	    unexpected_tag("(&)", node_tag(c1));
	}
	break;

    case LVAR_KIND:
	/* evaluate the other argument then delay */
	switch ( node_kind(c2) )
	{
	case LAZY_KIND:
	    CHECK_STACK1();
	    regs.sp   -= 1;
	    regs.sp[0] = c2;
	    regs.sp[1] = (Node *)___38__1;
	    regs.sp[2] = c1;
	    GOTO(c2->info->eval);
	case LVAR_KIND:
	    CHECK_STACK1();
	    regs.sp   -= 1;
	    regs.sp[0] = c1;
	    regs.sp[1] = (Node *)___38__2;
	    regs.sp[2] = c2;
	    GOTO(sync_var);
	}
	assert(node_kind(c2) == CAPP_KIND);
	regs.sp += 2;
	RETURN(c1);
    }

    /* trivial case */
    assert(node_kind(c1) == CAPP_KIND);
    if ( is_lazy_node(c2) )
    {
	*++regs.sp = c2;
	GOTO(c2->info->eval);
    }
    regs.sp += 2;
    RETURN(c2);
}

@
When an argument has been evaluated to head normal form, it must be
either a variable or the constant [[Success]]. In the former case, we
may return the variable if the other argument was evaluated to
[[Success]] in the meantime. In the latter case we can simply return
the other argument to the caller except if it is still a queue-me
node.

