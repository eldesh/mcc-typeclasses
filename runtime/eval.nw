DECLARE_LABEL(static, __isVar_1);

FUNCTION(__isVar)
{
 ENTRY_LABEL(extern, __isVar)
    EVAL(__isVar_1);
}

static
FUNCTION(__isVar_1)
{
    Node *r;
 ENTRY_LABEL(static, __isVar_1)
    if ( is_boxed(regs.sp[0]) && is_variable_node(regs.sp[0]) )
	r = CONST(__Prelude__True);
    else
	r = CONST(__Prelude__False);
    regs.sp += 1;
    RETURN(r);
}

