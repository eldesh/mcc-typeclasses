{
 ENTRY_LABEL(extern, __convertToFloat)
    SAVE_REGS(0);
    CALL1(nf_string, __convertToFloat_1, regs.r[0]);
}

static
FUNCTION(__convertToFloat_1)
{
    char       *buf;
    const char *loc;
    double     d;
    Node       *s, *r;
 ENTRY_LABEL(static, __convertToFloat_1)
    /* drop leading zeros */
    s = regs.r[0];
    while ( is_indir_node(s) )
	s = s->n.node;
    while ( s != nil )
    {
	r = s->c.args[0];
	while ( is_indir_node(r) )
	    r = r->n.node;
	if ( r->ch.ch != '0' )
	    break;
	s = s->c.args[1];
	while ( is_indir_node(s) )
	    s = s->n.node;
    }

    /* convert the remaining string */
    if ( s != nil )
    {
	buf = to_string(s);
	loc = setlocale(LC_NUMERIC, NULL);
	setlocale(LC_NUMERIC, "C");
	d   = strtod(buf, NULL);
	setlocale(LC_NUMERIC, loc);
	free(buf);
    }
    else
	d = 0;

    /* return a fresh number */
    CHECK_HEAP(0, float_node_size);
    r	    = (Node *)regs.hp;
    r->info = &float_info;
    put_double_val(r, d);
    regs.hp += float_node_size;
    RETURN(r, 0);
}
