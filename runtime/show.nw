	    cons->c.args[0] = rbracket;
	    cons->c.args[1] = tail;
	    regs.hp	   += cons_node_size;
	    break;

	case CONS_TAG:
	    regs.r[0] = list;
	    CHECK_HEAP(1, suspend_node_size(3) + suspend_node_size(4)
		           + cons_node_size);
	    list = regs.r[0];
	    show = regs.sp[0];
	    tail = regs.sp[1];

	    susp	    = (Node *)regs.hp;
	    susp->info	    = showTail_lazy_info_table;
	    susp->s.spc	    = regs.ss;
	    susp->s.args[0] = list->c.args[1];
	    susp->s.args[1] = show;
	    susp->s.args[2] = tail;
	    regs.hp	   += suspend_node_size(3);

	    susp2	     = (Node *)regs.hp;
	    susp2->info	     = showp_lazy_info_table;
	    susp2->s.spc     = regs.ss;
	    susp2->s.args[0] = list->c.args[0];
	    susp2->s.args[1] = zero;
	    susp2->s.args[2] = show;
	    susp2->s.args[3] = susp;
	    regs.hp	    += suspend_node_size(4);

